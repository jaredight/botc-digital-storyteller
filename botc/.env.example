# Blood on the Clocktower Environment Configuration

# Application Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=production

# Database Configuration (PostgreSQL for production)
POSTGRES_DB=botc
POSTGRES_USER=botc_user
POSTGRES_PASSWORD=change_this_secure_password
DATABASE_URL=postgresql://botc_user:change_this_secure_password@postgres:5432/botc

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=optional_redis_password

# Monitoring (optional)
GRAFANA_PASSWORD=secure_grafana_password

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Session Configuration
SESSION_TIMEOUT=3600
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# Game Settings
MAX_GAMES_PER_USER=5
MAX_PLAYERS_PER_GAME=15
GAME_TIMEOUT_HOURS=24

# Email Configuration (for notifications, optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/botc.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

